include ../../helpers/mixins.pug
include ../../../blocks/modules/popup-form/popup-form.pug
 
.popup-form
    .popup-form__wrp
        .popup-form__title Напишите нам
        .popup-form__name Заместитель начальника производственно-технического отдела
        .popup-form__desc Отправьте свои контактные данные, мы свяжемся с вами в самое ближайшее время.
        .popup-form__form
            form(action="/action.php")
                .form
                    .form__item
                        .form__subitem
                            input(type="text" placeholder="Ваше имя")
                    .form__item
                        .form__subitem
                            input(type="text" placeholder="Контактный телефон *" data-maska="+7(###)###-##-##" required)
                    .form__item
                        .form__subitem
                            textarea(placeholder="Комментарий")
                    .form__item
                        .form__subitem
                            label.attach-cv
                                input(type="file" name="cv")
                                div
                                    +icons('#ic_upload')
                                    span Прикрепить резюме (формат .doc, docx, .pdf; размер не более 5 МБ)
                                
                    .form__item
                        .form__subitem.form__subitem--free
                            button.btn.btn-full Отправить
                    .form__item
                        .form__subitem.form__subitem--free
                            .form__note Нажимая на кнопку, вы даёте согласие на обработку персональных данных согласно нашей <a href="policy.html" >Политикой конфиденциальности</a>
                                    
                                    